<form method="post" action="{{ path('address_delete', {'id':company.id, 'id_address': address.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id) }}">
    <div class="d-grid gap-1">
        <button class="btn btn-danger">
            <span class="text-light"><i class="fa fa-trash"></i> Supprimer l'addresse</span>
        </button>
    </div>
</form>
