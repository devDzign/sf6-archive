{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CompanyName</th>
                <th>StreetNumber</th>
                <th>StreetType</th>
                <th>StreetName</th>
                <th>City</th>
                <th>ZipCode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td><a href="{{ path('company_show', {'id': company.id}) }}">{{ company.name }}({{ company.id }})</a></td>
                <td>{{ address.streetNumber }}</td>
                <td>{{ address.streetType }}</td>
                <td>{{ address.streetName }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.zipCode }}</td>
                <td>
                    <a href="{{ path('address_show', {'id': company.id, 'id_address': address.id}) }}">show</a>
                    <a href="{{ path('address_edit', {'id': company.id, 'id_address': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('address_new', {'id': company.id}) }}">Create new</a>
{% endblock %}
